<h2><%= @task.title %></h2>
<h3><%= @task.details %></h3>
<p><% if @task.completed == true %>
    <i class="far fa-check-square"></i><span> This task is completed! :)</span>
    <% else %>
    <i class="far fa-square"></i> This task is not completed yet!</span>
    <% end %></p>

<p><%= link_to "Edit task", edit_task_path %></p>

<p><%= link_to "Back to list", tasks_path %></p>
